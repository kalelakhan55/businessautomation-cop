<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.redhat.cop.pam</groupId>
        <artifactId>dmn-examples-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>com.redhat.cop.pam</groupId>
    <artifactId>dmn-open-account-parent</artifactId>
    <name>${project.artifactId}-${project.version}</name>
    <version>1.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>model</module>
        <module>api/kie-api</module>
        <module>api/services-api</module>
        <module>impl/services-api-impl</module>
        <module>kjar</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-model</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-kie-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-services-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-services-api-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-kjar</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>quarkus</id>
            <modules>
                <module>quarkus</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-quarkus</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.quarkus</groupId>
                        <artifactId>quarkus-maven-plugin</artifactId>
                        <version>${quarkus-plugin.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${maven-surefire-plugin.version}</version>
                        <configuration>
                            <systemProperties>
                                <java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
                            </systemProperties>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>io.quarkus</groupId>
                        <artifactId>quarkus-bootstrap-maven-plugin</artifactId>
                        <version>${quarkus-plugin.version}</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>springboot</id>
            <properties>
                <swagger.version>2.9.2</swagger.version>
                <surefire-plugin.version>2.22.1</surefire-plugin.version>
            </properties>
            <modules>
                <module>springboot</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-springboot</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
        <profile>
            <id>embedded</id>
            <modules>
                <module>impl/kie-api-embedded-impl</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-kie-api-embedded-impl</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
        <profile>
            <id>remote</id>
            <properties>
                <remote.kieserver_url>http://localhost:8080/kie-server/services/rest/server</remote.kieserver_url>
                <remote.kieserver_user>kieServerUser</remote.kieserver_user>
                <remote.kieserver_password>kieServerUser1234;</remote.kieserver_password>
                <remote.kieserver_containerid>com.redhat.cop.pam:dmn-open-account-kjar:1.0</remote.kieserver_containerid>
            </properties>
            <modules>
                <module>impl/kie-api-remote-impl</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-kie-api-remote-impl</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
    </profiles>
</project>
