<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.redhat.cop.pam</groupId>
        <artifactId>dmn-examples-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>dmn-open-account-bdd-parent</artifactId>
    <name>${project.artifactId}-${project.version}</name>
    <version>1.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>model</module>
        <module>kjar</module>
        <module>api/kie-api</module>
        <module>impl/kie-api-remote-impl</module>
        <module>impl/kie-api-embedded-impl</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-bdd-model</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-bdd-kie-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-bdd-kjar</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-bdd-services-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.redhat.cop.pam</groupId>
                <artifactId>dmn-open-account-bdd-services-api-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>springboot</id>
            <properties>
                <swagger.version>2.9.2</swagger.version>
                <surefire-plugin.version>2.22.1</surefire-plugin.version>
            </properties>
            <modules>
                <module>springboot</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-bdd-springboot</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
        <profile>
            <id>embedded</id>
            <modules>
                <module>impl/kie-api-embedded-impl</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-bdd-kie-api-embedded-impl</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
        <profile>
            <id>remote</id>
            <properties>
                <remote.kieserver_url>http://localhost:8080/kie-server/services/rest/server</remote.kieserver_url>
                <remote.kieserver_user>kieServerUser</remote.kieserver_user>
                <remote.kieserver_password>kieServerUser1234;</remote.kieserver_password>
                <remote.kieserver_containerid>com.redhat.cop.pam:dmn-open-account-bdd-kjar:1.0</remote.kieserver_containerid>
            </properties>
            <modules>
                <module>impl/kie-api-remote-impl</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>com.redhat.cop.pam</groupId>
                        <artifactId>dmn-open-account-bdd-kie-api-remote-impl</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
    </profiles>

</project>
